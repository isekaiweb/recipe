<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_50</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_font</item>
    </style>

    <style name="img_creator">
        <item name="android:padding">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="shapeAppearanceOverlay">@style/circle</item>
    </style>

    <style name="creator_name">

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="img_food">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/rounded</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>

    <style name="rounded">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>


    <style name="common_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title_text">
        <item name="android:capitalize">words</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ic_heart_size_medium">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>